@{
    Layout = null;
}
@model BusinessLayer.DTO.UserLoginViewModel

<!DOCTYPE html>
<html lang="en">

<head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title>RoyalUI Admin</title>
    <!-- plugins:css -->
    <link rel="stylesheet" href="~/Panel/vendors/ti-icons/css/themify-icons.css">
    <link rel="stylesheet" href="~/Panel/vendors/base/vendor.bundle.base.css">
    <!-- endinject -->
    <!-- plugin css for this page -->
    <!-- End plugin css for this page -->
    <!-- inject:css -->
    <link rel="stylesheet" href="~/Panel/css/style.css">
    <!-- endinject -->
    <link rel="shortcut icon" href="~/Panel/images/favicon.png" />
</head>

<body>
    <div class="container-scroller">
        <div class="container-fluid page-body-wrapper full-page-wrapper">
            <div class="content-wrapper d-flex align-items-center auth px-0">
                <div class="row w-100 mx-0">
                    <div class="col-lg-4 mx-auto">
                        <div class="auth-form-light text-left py-5 px-4 px-sm-5">
                            <h4>Merhaba, haydi başlayalım</h4>
                            <h6 class="font-weight-light">Devam etmek için giriş yapın.</h6>

                            @Html.ValidationSummary(false, "", new { @class = "alert-alert-danger" })
                            <form class="pt-3" method="post">
                                <div class="form-group">
                                    <input type="text" asp-for="UserName"  class="form-control form-control-lg" id="exampleInputEmail1" placeholder="Kullanıcı Adı">
                                </div>
                                <div class="form-group">
                                    <input type="password" asp-for="Password" class="form-control form-control-lg" id="exampleInputPassword1" placeholder="Şifre">
                                </div>
                                <div class="mt-3">
                                    <button class="btn btn-block btn-info text-white" type="submit">Giriş Yap</button>
                                </div>
                                <div class="text-center mt-4 font-weight-light">
                                    Hesabınız yok mu? <a href="register.html" class="text-primary">Oluşturun</a>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
            <!-- content-wrapper ends -->
        </div>
        <!-- page-body-wrapper ends -->
    </div>
    <!-- container-scroller -->
    <!-- plugins:js -->

    <!-- endinject -->
</body>

</html>

