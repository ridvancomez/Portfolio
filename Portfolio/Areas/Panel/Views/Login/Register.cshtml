@model BusinessLayer.DTO.UserRegisterViewModel
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">

<head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title>RoyalUI Admin</title>
    <!-- plugins:css -->
    <link rel="stylesheet" href="~/Panel/vendors/ti-icons/css/themify-icons.css">
    <link rel="stylesheet" href="~/Panel/vendors/base/vendor.bundle.base.css">
    <!-- endinject -->
    <!-- plugin css for this page -->
    <!-- End plugin css for this page -->
    <!-- inject:css -->
    <link rel="stylesheet" href="~/Panel/css/style.css">
    <!-- endinject -->
    <link rel="shortcut icon" href="~/Panel/images/favicon.png" />
</head>

<body>
    <div class="container-scroller">
        <div class="container-fluid page-body-wrapper full-page-wrapper">
            <div class="content-wrapper d-flex align-items-center auth px-0">
                <div class="row w-100 mx-0">
                    <div class="col-lg-4 mx-auto">
                        <div class="auth-form-light text-left py-5 px-4 px-sm-5">
                            <h4>Burada yeni misin</h4>
                            <h6 class="font-weight-light">Kaydolmak çok kolay. Sadece birkaç adım gererkiyor</h6>

                            <form class="pt-3" method="post">
                                <div class="form-group">
                                    <input type="text" asp-for="Name" class="form-control form-control-lg" id="exampleInputUsername1" placeholder="İsim Soyisim">
                                </div>
                                <div class="form-group">
                                    <input type="text" asp-for="UserName" class="form-control form-control-lg" id="exampleInputUsername1" placeholder="Username">
                                </div>
                                <div class="form-group">
                                    <input type="text" asp-for="ImageUrl" class="form-control form-control-lg" id="exampleInputUsername1" placeholder="Resim yolu">
                                </div>
                                <div class="form-group">
                                    <input type="email" asp-For="Email" class="form-control form-control-lg" id="exampleInputEmail1" placeholder="Email">
                                </div>
                                <div class="form-group">
                                    <input type="password" asp-for="Password" class="form-control form-control-lg" id="exampleInputPassword1" placeholder="Password">
                                </div>
                                <div class="form-group">
                                    <input type="password" asp-for="ConfirmPassword" class="form-control form-control-lg" id="exampleInputPassword1" placeholder="Password">
                                </div>
                                <div class="mt-3">
                                    <button class="btn btn-block btn-info text-white">Kayıt Ol</button>
                                </div>
                                <div class="text-center mt-4 font-weight-light">
                                    Already have an account? <a  class="text-primary">Login</a>
                                </div>
                            </form>

                        </div>
                    </div>
                </div>
            </div>
            <!-- content-wrapper ends -->
        </div>
        <!-- page-body-wrapper ends -->
    </div>
    <!-- container-scroller -->
    <!-- plugins:js -->
    <script src="~/Panel/vendors/base/vendor.bundle.base.js"></script>
    <!-- endinject -->
    <!-- inject:js -->
    <script src="~/Panel/js/off-canvas.js"></script>
    <script src="~/Panel/js/hoverable-collapse.js"></script>
    <script src="~/Panel/js/template.js"></script>
    <script src="~/Panel/js/todolist.js"></script>
    <!-- endinject -->
</body>

</html>


